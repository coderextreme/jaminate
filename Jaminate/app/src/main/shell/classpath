# GRAAL DOES NOT TAKE C:
export GRAAL_CLASSPATH=".;${X3DJSONLD}/java;${HOMESFOLDER}/$USERNAME/JSHumanoids/lib/X3DJSAIL.4.0.full.jar;${X3DJSONLD}/lib/saxon-he-12.1.jar;${X3DJSONLD}/graaljs"
